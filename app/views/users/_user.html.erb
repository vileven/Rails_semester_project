<div class="row">
  <div class="col-md-3">
    <%= image_tag(user.avatar.medium, class: 'img-circle')  %>
  </div>
  <div class="col-md-9">
    <%= link_to user.name, user_path(user) %>
    <% if current_user.admin? && !current_user?(user) %>
        | <%= link_to "delete", user, method: :delete,
                      data: { confirm: "You sure?" } %>
    <% end %>
  </div>
</div>