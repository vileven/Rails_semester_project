<% provide(:title, 'Sign up') %>
<% content_for :styles do %>
  <%= stylesheet_link_tag 'custom/signup' %>
<% end %>
<h1>Sign up</h1>
<div class="row">
      <%= form_for(@user, :html => {class: "form-horizontal"}) do |f| %>
          <%= render 'shared/error_messages' %>
          <div class="form-group">
            <%= f.label :name, class: "col-sm-3 control-label" %>
            <div class="col-sm-9 controls">
              <%= f.text_field :name, :class => "form-control", placeholder: "your login" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :email, class: "col-sm-3 control-label" %>
            <div class="col-sm-9 controls">
              <%= f.text_field :email, :class => "form-control", placeholder: "example@mail.com" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password, class: "col-sm-3 control-label" %>
            <div class="col-sm-9 controls">
              <%= f.password_field :password, :class => "form-control",
                                   placeholder: "write password, min - 6 letters" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Confirmation", class: "col-sm-3 control-label" %>
            <div class="col-sm-9 controls">
              <%= f.password_field :password_confirmation, :class => "form-control",
                                   placeholder: "repeat password" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-3">
              <%= f.submit "Create my account", class: "btn btn-large btn-default am-btn", id: "btn-reg" %>
            </div>
          </div>
      <% end %>
</div>