<% provide(:title, "Sign in") %>
<% content_for :styles do %>
    <%= stylesheet_link_tag 'custom/signup' %>
<% end %>
<h1>Sign in</h1>
<%= form_for(:session, url: sessions_path, :html => {class: "form-horizontal"}) do |f| %>

    <div class="form-group">
      <%= f.label :email, class: "col-sm-3 control-label" %>
      <div class="col-sm-9 controls">
        <%= f.email_field :email, :class => "form-control", placeholder: "example@mail.com" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "col-sm-3 control-label" %>
      <div class="col-sm-9 controls">
        <%= f.password_field :password, :class => "form-control", placeholder: "type your password, min - 6 letters" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-3">
        <%= f.submit "Sign in", class: "btn btn-lg btn-default am-btn" %>
      </div>
    </div>
<% end %>
<div class="row" style="margin-top: 30px;">
  <div class="col-sm-offset-4 col-sm-5">
    <p><h4>New user? <%= link_to "Sign up now!", signup_path, id: "sign-up-btn-curl"  %></h4></p>
  </div>
</div>